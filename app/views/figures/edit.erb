<h2>Edit Historical Figure</h2>

<form method="POST" action="/figures/<%= @figure.id %>">

    <input type="hidden" name="_method" value="PATCH">

    Figure Name: <input type="text" id="figure_name" name="figure[name]" value="<%= @figure.name %>"> <br>

    <% @landmarks.each do |landmark| %>
        <label><%= landmark.name %></label>
        <input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" id="<%= landmark.name %>" <%='checked' if @figure.landmarks.include?(landmark) %>> <br>
    <% end %>
    
    <label>Add New:</label>
    <input type="text" id="new_landmark" name="landmark[name]"><br></br>

    <% @titles.each do |title| %>

        <div>

            <input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" id="<%= title.name %>" <%='checked' if @figure.titles.include?(title) %>> <%= title.name %>

        </div>

    <% end%>

    <input type="submit" value="Edit Figure">

<a class="button" href="/figures">Figures</a>
<a class="button" href="/">Home</a>