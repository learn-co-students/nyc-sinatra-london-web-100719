<h2>Create New Figure</h2>

<form method="POST" action="/figures">
    
    Figure Name: <input id="figure_name" type="text" name="figure[name]"><br>

    <h2>Titles</h2>

    <% @titles.each do |title| %>
    
        <label><%= title.name %></label>
        <input type="checkbox" id="title_<%=title.id%>" name="figure[title_ids][]" value="<%= title.id %>"><br>

    <% end %>

    <h2>Create New Title:</h2>
        
        Title Name: <input id="new_title" type="text" name="title[name]"><br>

    <h2>Landmarks</h2>

    <% @landmarks.each do |landmark| %>

        <label><%= landmark.name %></label>
        <input type="checkbox" id="landmark_<%=landmark.id%>" name="figure[landmark_ids][]" value="<%= landmark.id %>"><br>

    <% end %>

    <h2>Create New Landmark:</h2>
        
        Landmark Name: <input id="new_landmark" type="text" name="landmark[name]"><br>
        Year Completed: <input type="text" name="landmark[year_completed]"><br>
    
    <input type="submit" value="Create New Figure">

</form>

<br><br>

<a class="button" href="/landmarks">Landmarks</a>
